<%# OVERRIDE Blacklight 7.0.0 to add sidebar and change bootstrap classes %>

<% doc_presenter = show_presenter(document) %>
<%# default partial to display solr document fields in catalog show view -%>
<div class='row'>
  <div class='col-lg-8'>
    <dl class="row dl-invert document-metadata">
        <% if @document._source[:full_title_tesim].present? %>
          <dt class="blacklight-spotlight_upload_full_title_tesim col-md-6 col-lg-3">
            title:
          </dt>
          <dd class="blacklight-spotlight_upload_full_title_tesim col-md-6 col-lg-9">
            <%= @document._source[:full_title_tesim].first %>
          </dd>
        <% end %>
      <% doc_presenter.fields_to_render.each do |field_name, field| -%>
        <dt class="blacklight-<%= field_name.parameterize %> col-md-6 col-lg-3"><%= render_document_show_field_label document, field: field_name %></dt>
        <dd class="blacklight-<%= field_name.parameterize %> col-md-6 col-lg-9"><%= doc_presenter.field_value field %></dd>
      <% end -%>
    </dl>
  </div>
  <div class='col-lg-4 sidebar'>
    <%= render 'tools_and_links' %>
    <%= render 'contacts_show' %>
  </div>
</div>
